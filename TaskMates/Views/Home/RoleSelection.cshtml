@{
    Layout = null;
    ViewData["Title"] = "TaskMates - Select Your Role";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .hero-section {
            background: linear-gradient(135deg, #37818a 0%, #43ad7c 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .role-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            border: none;
            border-radius: 15px;
        }

            .role-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            }

        .role-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .welcome-text {
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
    </style>
</head>
<body style="background-color: #f8f9fa;">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <!-- Welcome Content -->
                    <div class="welcome-text mb-5">
                        <h1 class="display-4 fw-bold mb-4">Welcome to TaskMates</h1>
                        <p class="lead mb-4">A collaborative platform for students, faculty, and administrators to share ideas, organize events, and build a stronger school community.</p>
                        <p class="h5">Choose your role to get started:</p>
                    </div>

                    <!-- Role Selection Cards -->
                    <div class="row g-4">
                        <!-- Student Card -->
                        <div class="col-md-4">
                            <div class="card role-card h-100" style="background-color: #43ad7c;" onclick="selectRole('student')">
                                <div class="card-body text-center text-white p-4">
                                    <div class="role-icon">üéì</div>
                                    <h3 class="card-title fw-bold">Student</h3>
                                    <p class="card-text">Submit ideas, volunteer for projects, upvote content, and participate in school events.</p>
                                    <div class="mt-3">
                                        <span class="badge bg-light text-dark">Submit Ideas</span>
                                        <span class="badge bg-light text-dark">Volunteer</span>
                                        <span class="badge bg-light text-dark">Upvote</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Faculty Card -->
                        <div class="col-md-4">
                            <div class="card role-card h-100" style="background-color: #37818a;" onclick="selectRole('faculty')">
                                <div class="card-body text-center text-white p-4">
                                    <div class="role-icon">üë®‚Äçüè´</div>
                                    <h3 class="card-title fw-bold">Faculty</h3>
                                    <p class="card-text">Endorse ideas and events, provide prioritized feedback, and guide student initiatives.</p>
                                    <div class="mt-3">
                                        <span class="badge bg-light text-dark">Endorse</span>
                                        <span class="badge bg-light text-dark">Guide</span>
                                        <span class="badge bg-light text-dark">Review</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Admin Card -->
                        <div class="col-md-4">
                            <div class="card role-card h-100" style="background-color: #2c5aa0;" onclick="selectRole('admin')">
                                <div class="card-body text-center text-white p-4">
                                    <div class="role-icon">‚öôÔ∏è</div>
                                    <h3 class="card-title fw-bold">Administrator</h3>
                                    <p class="card-text">Manage content, approve events, moderate discussions, and oversee platform operations.</p>
                                    <div class="mt-3">
                                        <span class="badge bg-light text-dark">Manage</span>
                                        <span class="badge bg-light text-dark">Approve</span>
                                        <span class="badge bg-light text-dark">Moderate</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Continue Button -->
                    <div class="mt-5">
                        <button id="continueBtn" class="btn btn-light btn-lg px-5" style="display: none;" onclick="proceedToLogin()">
                            Proceed to Login ‚Üí
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4">About TaskMates</h2>
                <p class="lead">TaskMates is designed to foster collaboration and innovation within our school community. Whether you're a student with a brilliant idea, a faculty member looking to support student initiatives, or an administrator managing school-wide activities, TaskMates provides the tools you need to make a difference.</p>

                <div class="row mt-5">
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="h1 mb-3">üí°</div>
                            <h5>Share Ideas</h5>
                            <p>Students can submit creative ideas and get community support through upvotes and volunteering.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="h1 mb-3">üìÖ</div>
                            <h5>Organize Events</h5>
                            <p>Plan and manage school events with proper approval workflows and status tracking.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="h1 mb-3">ü§ù</div>
                            <h5>Build Community</h5>
                            <p>Connect students, faculty, and administrators in meaningful collaborative projects.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let selectedRole = null;

        function selectRole(role) {
            selectedRole = role;
            document.getElementById('continueBtn').style.display = 'inline-block';

            // Remove active class from all cards
            document.querySelectorAll('.role-card').forEach(card => {
                card.classList.remove('border', 'border-4', 'border-warning');
            });

            // Add active class to selected card
            event.currentTarget.classList.add('border', 'border-4', 'border-warning');
        }

        function proceedToLogin() {
            if (selectedRole) {
                // Store selected role temporarily and redirect to login
                sessionStorage.setItem('selectedRole', selectedRole);
                window.location.href = '@Url.Action("Login", "Home")';
            }
        }
    </script>
</body>
</html>

