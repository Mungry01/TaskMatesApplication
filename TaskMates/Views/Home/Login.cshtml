@{
    Layout = null;
    ViewData["Title"] = "Login - TaskMates";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .login-section {
            background: linear-gradient(135deg, #37818a 0%, #43ad7c 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .role-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .btn-login {
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="login-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="card login-card">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h2 class="fw-bold mb-3">Welcome Back!</h2>
                                <p class="text-muted">Sign in to continue to TaskMates</p>
                                <span id="roleBadge" class="role-badge bg-primary text-white"></span>
                            </div>

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["ErrorMessage"]
                                </div>
                            }

                            <form asp-action="Login" asp-controller="Home" method="post">
                                <input type="hidden" id="roleInput" name="role" value="" />
                                
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control form-control-lg" id="username" name="username" required placeholder="Enter your username">
                                </div>

                                <div class="mb-4">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control form-control-lg" id="password" name="password" required placeholder="Enter your password">
                                </div>

                                <button type="submit" class="btn btn-primary w-100 btn-login mb-3">Sign In</button>
                            </form>

                            <div class="text-center">
                                <p class="mb-2">Don't have an account? <a href="@Url.Action("Register", "Home")" class="text-decoration-none fw-bold">Sign Up</a></p>
                                <a href="@Url.Action("RoleSelection", "Home")" class="text-muted text-decoration-none">‚Üê Change Role</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Get the selected role from session storage
        const selectedRole = sessionStorage.getItem('selectedRole') || 'student';
        document.getElementById('roleInput').value = selectedRole;
        
        // Display role badge
        const roleBadge = document.getElementById('roleBadge');
        const roleNames = {
            'student': 'üéì Student',
            'faculty': 'üë®‚Äçüè´ Faculty',
            'admin': '‚öôÔ∏è Administrator'
        };
        roleBadge.textContent = roleNames[selectedRole] || 'Student';
        
        // Set badge color based on role
        if (selectedRole === 'student') {
            roleBadge.style.backgroundColor = '#43ad7c';
        } else if (selectedRole === 'faculty') {
            roleBadge.style.backgroundColor = '#37818a';
        } else if (selectedRole === 'admin') {
            roleBadge.style.backgroundColor = '#2c5aa0';
        }
    </script>
</body>
</html>

